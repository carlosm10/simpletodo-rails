<p id="notice"><%= notice %></p>

<h1>Things to do</h1>

<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.title %></td>
        <td><%= todo.notes %></td>
        <td><%= link_to 'Show', todo , :class => "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) , :class => "btn btn-default"%></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } , :class => "btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to '+ New Todo', new_todo_path , :class => "btn btn-success" %>
